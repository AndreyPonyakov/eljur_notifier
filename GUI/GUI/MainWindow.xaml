<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Установка разрешений по учащимся" Height="760" Width="1280">
    <Grid RenderTransformOrigin="0.748,0.494">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="8*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <DataGrid Name ="PupulsDataGrid" HorizontalAlignment="Left"  Margin="10,10,0,0" VerticalAlignment="Top" Grid.Column="0" Loaded="DataGrid_Loaded"  CellEditEnding="cellEditEnding"  AutoGenerateColumns = "True"  CanUserAddRows="False" >
            
        </DataGrid>
        <Button  Name ="Button" Content="Обновить" HorizontalAlignment="Right" Margin="0,40,50,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Grid.Column="1" Height="20"/>

    </Grid>
</Window>
